<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!--自定义对话框样式-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <!--对话框是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--图标上是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--对话框背景透明-->
        <item name="android:windowBackground">@color/trans</item>
        <!--对话框是否悬浮在activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--设置对话框内容背景-->
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="global_columns_style">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/linearlayout_border</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20.0dip</item>
        <item name="android:layout_marginRight">20.0dip</item>
    </style>

    <style name="global_column_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">13.0dip</item>
        <item name="android:paddingRight">13.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>

    <style name="global_catalog_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff959595</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
